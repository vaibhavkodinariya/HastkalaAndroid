<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="actionBarTheme">@style/Widget.AppCompat.Light.ActionBar</item>
        <item name="actionBarStyle">@style/LightActionBarTheme</item>
        <item name="color">@color/black_gray</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="LightActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>

    </style>

</resources>